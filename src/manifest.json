{
  "name": "Read Later",
  "version": "5.0.0",
  "manifest_version": 3,
  "description": "Store links to read later, organize tabs and windows",
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "optional_permissions": [
    "tabs",
    "windows"
  ],
  "options_ui": {
    "page": "tab.html",
    "open_in_tab": true
  },
  "commands": {
    "add-url": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y",
        "windows": "Ctrl+Shift+Y",
        "linux": "Ctrl+Shift+Y"
      },
      "description": "Add current page to ReadLater"
    }
  }
}